{
    "AppConfig": {
        "UpgradeRequired": true,
        "AutoUpdate": true,
        "UpdateRepository": "https://github.com/Heroes-Profile/HeroesProfile.Uploader",
        "WindowTop": 400,
        "WindowLeft": 400,
        "MinimizeToTray": false,
        "WindowHeight": 600,
        "WindowWidth": 700,
        "DeleteAfterUpload": "None",
        "Theme": "MetroDark",
        "AllowPreReleases": false,
        "ApplicationVersion": "",
        "PreMatchPage": false,
        "PostMatchPage": false
    },    
    "NLog": {
        "throwConfigExceptions": true,
        "autoReload": true,
        "internalLogLevel": "Info",
        "internalLogFile": "c:\\temp\\internal-nlog.txt",
        "targets": {
            "async": true,
            "logfile": {
                "fileName": "${specialfolder:folder=ApplicationData}/HeroesProfile/logs/log.txt",
                "archiveFileName": "${specialfolder:folder=ApplicationData}/HeroesProfile/logs/log.txt",
                "layout": "[${longdate}] ${uppercase:${level}}: ${message} ${exception:format=tostring}",
                "maxArchiveFiles": 3,
                "archiveNumbering": "Rolling",
                "archiveAboveSize": 10000000,
                "type": "File"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Debug",
                "writeTo": "logfile"
            }
        ]
    }
}